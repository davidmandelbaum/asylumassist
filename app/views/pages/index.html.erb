<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Seq no</th>
      <th>Name</th>
      <th>Guidance</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.seq_no %></td>
        <td><%= page.name %></td>
        <td><%= page.guidance %></td>
        <td><%= page.section %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
