<h3>Translate</h3>

<div class="row">
  <div class="col-md-8">

    <%= form_tag("/translator/submit", method: "post", id: 'translation_form', :class => 'form-inline', :role => 'form') do %>

        <% I18n.locale = @locale %>
        <%= text_area_tag "sect_guid_" + s.id.to_s, s.guidance, :cols => 80, :rows => 3, :class => 'form-control' %> <br />

      <%= submit_tag 'Submit translation', class: "btn btn-lg btn-success" %>
    <% end %>

  </div>
</div>
