<%= render "shared/tracker" %>

<h1>Review Answers</h1>
<br /><br />

<div class="row">
  <div class="col-md-6">
    <% @sections.each do |s| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= s.name %></h3>
        </div>
        <div class="panel-body">
            <% @entry.get_section_answers(s).each do |a| %>
                <strong><%= a.question.name %></strong> <br />
                <%= a.text %><br />
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<button type="button" class="btn btn-success btn-lg">
  <%= link_to('Submit application', controller: 'home', action: 'submit') %>
</button>

<br />
